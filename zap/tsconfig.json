 
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler", // Alterado para bundler
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@zap_client/*": ["./client/src/*"],
      "@zap_server/*": ["./server/*"],
      "@zap_shared/*": ["./shared/*"]
    },
    "noEmit": true, // NoEmit para o tsconfig raiz, os projetos client/server terão suas configs
    "allowImportingTsExtensions": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "references": [ // Para permitir que o TS construa/verifique client e server separadamente
    { "path": "./client" },
    { "path": "./server/tsconfig.server.json" } // Referência ao tsconfig específico do servidor
  ],
  "exclude": ["node_modules", "dist_server", "client/dist"]
}