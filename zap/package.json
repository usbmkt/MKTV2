{
  "name": "mktv2-zap-module",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:client": "vite --config client/vite.config.ts --port 3001",
    "build:client": "tsc --project client/tsconfig.json && vite build --config client/vite.config.ts",
    "preview:client": "vite preview --config client/vite.config.ts --port 3001",
    "dev:server": "NODE_ENV=development ZAP_DATABASE_URL=$(grep ZAP_DATABASE_URL .env.zap | cut -d '=' -f2) tsx watch server/index.ts",
    "build:server": "npx esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist_server --define:process.env.NODE_ENV='\"production\"'",
    "start:server": "NODE_ENV=production ZAP_DATABASE_URL=$(grep ZAP_DATABASE_URL .env.zap | cut -d '=' -f2) node dist_server/index.js",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "tsx scripts/migrate_zap_db.ts",
    "check:server": "tsc --project tsconfig.server.json --noEmit",
    "check:client": "tsc --project client/tsconfig.json --noEmit",
    "check": "npm run check:server && npm run check:client",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.51.15",
    "@whiskeysockets/baileys": "^6.7.5",
    "@xyflow/react": "^12.6.4",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.32.1",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.417.0",
    "pg": "^8.12.0",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.1",
    "qrcode": "^1.5.3",
    "qrcode-terminal": "^0.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.1",
    "wouter": "^3.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.13",
    "@types/pg": "^8.11.6",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "drizzle-kit": "^0.23.2",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vite": "^5.3.5"
  }
}